<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 自定义圆角CardView的属性 -->
    <declare-styleable name="RadiusCardView">
        <!--        左上圆角大小-->
        <attr name="rcv_topLeftRadius" format="dimension" />
        <!--        右上圆角大小-->
        <attr name="rcv_topRightRadius" format="dimension" />
        <!--        右下圆角大小-->
        <attr name="rcv_bottomRightRadius" format="dimension" />
        <!--        左下圆角大小-->
        <attr name="rcv_bottomLeftRadius" format="dimension" />
    </declare-styleable>
    <declare-styleable name="CircleProgressBar">
        <!--    圆环半径    -->
        <attr name="cpb_radius" format="dimension" />
        <!--    圆环宽度    -->
        <attr name="cpb_stroke_width" format="dimension" />
        <!--    圆环背景色  -->
        <attr name="cpb_progress_bar_bg_color" format="color" />
        <!--   当前进度环形的颜色   -->
        <attr name="cpb_progress_bar_color" format="color" />
        <!--   最大进度     -->
        <attr name="cpb_max_progress" format="integer" />
        <!--   当前进度    -->
        <attr name="cpb_current_progress" format="integer" />
        <!--   进度文案    -->
        <attr name="cpb_text" format="string" />
        <!--   文案颜色    -->
        <attr name="cpb_text_color" format="color" />
        <!--   文案大小    -->
        <attr name="cpb_text_size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ItemValueView">
        <attr name="iv_item_name" format="string" />
        <attr name="iv_item_show_arrow" format="boolean" />
        <attr name="iv_item_value" format="string" />
        <attr name="iv_item_icon" format="reference" />
    </declare-styleable>

    <declare-styleable name="TransformShapeImageView">
        <!--  需要显示的图形样式 -->
        <attr name="tsiv_mask" format="reference" />
        <!-- 边框宽度 -->
        <attr name="tsiv_stroke_width" format="dimension" />
        <!-- 边框颜色 -->
        <attr name="tsiv_stroke_color" format="color" />
    </declare-styleable>
</resources>